doctype html
html
  head
    block head
      title="Git It Done"
      link(rel='stylesheet' href='/stylesheets/reset.css')
  body
    div(class='header')
      .logo
        a(href="/lists")
          img(src="/images/logo.png" alt="Git It Done" class="mainImg")
        //- h1(class="logo") Git It Done
      .search
        form(action="/search" method="POST")
          input(type="text" name="taskName" class="headerSearchBar")
          input(type='hidden' name='_csrf' value=csrfToken)
          button(class="headerSearchButton") Search Tasks
      .logout
        form(action="/users/logout" method="POST")
          button(class="logoutButton") Logout
    div(class='body')
      block content
  footer
      block foot
