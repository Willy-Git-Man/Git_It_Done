doctype html
html
  head
      block head
        title="Git It Done"
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body
    div(class='header')
      form(action="/search" method="POST")
        a(class="logo" href='/lists') Git It Done
        input(type="text" name="taskName" class="headerSearchBar")
        input(type='hidden' name='_csrf' value=csrfToken)
        button(class="headerSearchButton") Search Tasks
      form(action="/users/logout" method="POST")
        button(class="logoutButton") Logout
    div(class='body')


      block content
