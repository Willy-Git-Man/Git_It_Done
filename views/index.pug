extends layout

append head
  link(rel="stylesheet" href="/stylesheets/index.css")
  script(src="/javascripts/index.js" type="module" defer)

block content


  div(class='listDiv')
    form(action='/lists' method='post')
      input(type="hidden" name="_csrf" value=csrfToken)
      input(type="text" name="listName" class="listName")
      button(class="addListButton") Add
      ul
        if lists
          each list in lists
            li
              a(href=`/lists/${list.id}`)=list.listName
              //- form(action=`/lists/${list.id}/edit`, method="POST")
              button(class="editButton") ✏️
              form(action=`/lists/${list.id}/delete`, method="POST")
                button(class="deleteButton") 🗑️

  div(class='taskDiv')
    form(action=`/lists/${listId}` method="POST")
      input(type="hidden" name="_csrf" value=csrfToken)
      input(type="text" name="taskName" class="taskName")
      button(class="addTaskButton") Add Task
      ul
        if tasks
          each task in tasks
            li
              a(href=`/lists/${listId}/${task.id}`)=task.taskName
                //- form(action=`/lists/${listId}/${task.id}/edit` method="POST")
                  //- input(type="hidden" name="_csrf" value=csrfToken)
                button(class="editButton") ✏️
                //- form(action=`/lists/${listId}/${task.id}/delete` method="POST")
                  //- input(type="hidden" name="_csrf" value=csrfToken)
                button(class="deleteButton") 🗑️


  div(class='sidebar')
