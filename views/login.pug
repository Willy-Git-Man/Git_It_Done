doctype html
html
  head
    block head
      title="Git It Done"
      link(rel='stylesheet' href='/stylesheets/index.css')

  .loginFormDiv
    form(action="/users/login" method="POST" class="loginForm")

      input(type="hidden" name="_csrf" value=csrfToken)
      label(for="email" class="emailLoginLabel") Email
      input(type="text" id="email" name="email" required)
      label(for="password" class="passwordLoginLabel") Password
      input(type="text" id="password" name="password" required)
      button(type="submit" class="loginButton") Login
      a(href="/users/register" class="registerLoginLabel") Register
